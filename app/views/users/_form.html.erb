<%= form_for @user, url: signup_path do |f| %>
  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :name, class: "col-form-label" %></div>
    <div class="col-sm-10"><%= f.text_field :name, class: 'form-control'%></div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :email, class: "col-form-label" %></div>
    <div class="col-sm-10"><%= f.email_field :email, class: 'form-control'%></div>
  </div>
  <div class="form-group row"> 
    <div class="col-sm-2"><%= f.label :password, class: "col-form-label" %></div>
    <div class="col-sm-10"><%= f.password_field :password, class: 'form-control'%></div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2"><%= f.label :password_confirmation, "Confirm", class: "col-form-label" %></div>
    <div class="col-sm-10"><%= f.password_field :password_confirmation, class: 'form-control'%></div>
  </div>
  <div class="row">
    <%= f.submit 'Create User', class: 'btn btn-primary m-auto'%>
  </div>
<% end %>